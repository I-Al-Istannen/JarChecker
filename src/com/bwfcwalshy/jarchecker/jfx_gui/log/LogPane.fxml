<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bwfcwalshy.jarchecker.jfx_gui.log.LogPaneController">
  <bottom>
    <BorderPane prefHeight="14.0" prefWidth="600.0">
      <center>
        <ProgressBar fx:id="progressBar" prefWidth="200.0" progress="0.0" />
      </center>
    </BorderPane>
  </bottom>
  <center>
    <BorderPane id="borderPaneLog" maxHeight="10000.0" maxWidth="10000.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
      <top>
        <MenuBar BorderPane.alignment="CENTER">
          <menus>
            <Menu mnemonicParsing="false" text="Filter">
              <items>
                <MenuItem fx:id="addFilterMenuItem" mnemonicParsing="false" onAction="#onFilterLogLevel" text="Filter by Log Level" />
                <SeparatorMenuItem mnemonicParsing="false" />
                <MenuItem fx:id="deleteFiltersMenuItems" mnemonicParsing="false" onAction="#onRemoveAllFilters" text="Remove all Filters" />
                <SeparatorMenuItem mnemonicParsing="false" />
                <MenuItem fx:id="listFiltersMenuItems" mnemonicParsing="false" onAction="#onListFilters" text="List filters" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Operations">
              <items>
                <MenuItem fx:id="copyAllMenuItem" mnemonicParsing="false" onAction="#onCopyAll" text="Copy all" />
                <MenuItem fx:id="clearMenuItem" mnemonicParsing="false" onAction="#onClear" text="Clear" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Log Options">
              <items>
                <CheckMenuItem fx:id="wrapTextCheckMenuItem" mnemonicParsing="false" onAction="#onWrapText" text="Wrap text" />
              </items>
            </Menu>
          </menus>
        </MenuBar>
      </top>
         <center>
            <ScrollPane fitToHeight="true" fitToWidth="true" BorderPane.alignment="CENTER">
               <content>
                  <ListView id="log" fx:id="logList" prefHeight="200.0" prefWidth="200.0" />
               </content>
            </ScrollPane>
         </center>
    </BorderPane>
  </center>
  <stylesheets>
    <URL value="@LogPaneCss.css" />
  </stylesheets>
  <top>
    <Label id="heading" alignment="CENTER" maxWidth="10000.0" text="Log" />
  </top>
</BorderPane>
