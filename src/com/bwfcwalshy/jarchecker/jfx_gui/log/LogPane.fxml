<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="com.bwfcwalshy.jarchecker.jfx_gui.log.LogPaneController">
  <bottom>
    <BorderPane prefHeight="14.0" prefWidth="600.0">
      <center>
        <ProgressBar fx:id="progressBar" prefWidth="200.0" progress="0.0" />
      </center>
    </BorderPane>
  </bottom>
  <center>
    <BorderPane id="borderPaneLog" maxHeight="10000.0" maxWidth="10000.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
      <center>
        <TextArea fx:id="textArea" editable="false" prefHeight="200.0" prefWidth="200.0" styleClass="log-text-field" text="&#10;" BorderPane.alignment="CENTER" />
      </center>
      <top>
        <MenuBar BorderPane.alignment="CENTER">
          <menus>
            <Menu mnemonicParsing="false" text="Filter">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#onFilterLogLevel" text="Filter by Log Level" fx:id="addFilterMenuItem" />
                <SeparatorMenuItem mnemonicParsing="false" />
                <MenuItem mnemonicParsing="false" onAction="#onRemoveAllFilters" text="Remove all Filters" fx:id="deleteFiltersMenuItems" />
                <SeparatorMenuItem mnemonicParsing="false" />
                <MenuItem mnemonicParsing="false" onAction="#onListFilters" text="List filters" fx:id="listFiltersMenuItems" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Operations">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#onCopyAll" text="Copy all" fx:id="copyAllMenuItem" />
                <MenuItem mnemonicParsing="false" onAction="#onClear" text="Clear" fx:id="clearMenuItem" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Log Options">
              <items>
                <CheckMenuItem mnemonicParsing="false" onAction="#onWrapText" text="Wrap text" fx:id="wrapTextCheckMenuItem" />
              </items>
            </Menu>
          </menus>
        </MenuBar>
      </top>
    </BorderPane>
  </center>
  <stylesheets>
    <URL value="@LogPaneCss.css" />
  </stylesheets>
  <top>
    <Label id="heading" alignment="CENTER" maxWidth="10000.0" text="Log" />
  </top>
</BorderPane>
